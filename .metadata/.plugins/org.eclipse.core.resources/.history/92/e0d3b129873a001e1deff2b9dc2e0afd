package labBClimateMonitoringServer;

import java.net.*;
import java.io.*;

public class CMConnectionHandler extends Thread{
	private Socket clientSocket;
	private PrintWriter out;
	private BufferedReader in;
	
	public CMConnectionHandler(Socket socket) {
		this.clientSocket = socket;
	}
	
	public void run() {
		try {
			out = new PrintWriter(clientSocket.getOutputStream(), true);
			in = new BufferedReader(new InputStreamReader(clientSocket.getInputStream()));
			
			String input;
			while((input = in.readLine()) != null) {
				if ("Termina".equals(input)) {
					out.println("Chiusura connessione");
					break;
				}
				out.println("messaggio da mandare"); //risultato della query  ecc
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
